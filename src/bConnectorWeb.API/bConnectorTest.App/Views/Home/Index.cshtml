@model CardModel
@{
    ViewData["Title"] = "Send Adaptive Card";
}

<h1>Send Adaptive Card</h1>

<form role="form" asp-controller="Card" asp-action="SendDataToDatabase" method="post">

    

    <p>Name: </p>
    <input asp-for="Name" />
    
    <p>Email: </p>
    <input asp-for="Email"/> 

    <p>Phone: </p>
    <input asp-for="Phone"/>

    <p>Address: </p>
    <input asp-for="Address" />

    
    <button type="submit">Send Adaptive Card</button>
</form>


@section Scripts {
    <!-- You can leave this section empty, as we are not using custom JavaScript for form submission. -->
}